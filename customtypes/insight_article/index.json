{
  "id": "insight_article",
  "label": "Insight Article",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "unique-article-slug"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Article title"
        }
      },
      "excerpt": {
        "type": "StructuredText",
        "config": {
          "label": "Excerpt",
          "placeholder": "Brief article summary",
          "allowTargetBlank": false,
          "multi": "paragraph"
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "Select category",
          "options": ["What we're creating", "What we're consuming"]
        }
      },
      "publication_date": {
        "type": "Date",
        "config": {
          "label": "Publication Date",
          "placeholder": "YYYY-MM-DD"
        }
      },
      "read_time": {
        "type": "Text",
        "config": {
          "label": "Read Time",
          "placeholder": "e.g. 5 min read"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {
            "width": 1600,
            "height": 900
          },
          "thumbnails": []
        }
      },
      "body": {
        "type": "StructuredText",
        "config": {
          "label": "Body",
          "placeholder": "Article content",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      }
    },
    "SEO": {
      "seo_title": {
        "type": "Text",
        "config": {
          "label": "SEO Title",
          "placeholder": "Title for search engines"
        }
      },
      "seo_description": {
        "type": "Text",
        "config": {
          "label": "SEO Description",
          "placeholder": "Description for search engines"
        }
      }
    }
  }
}
